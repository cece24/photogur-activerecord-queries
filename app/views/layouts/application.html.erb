<!DOCTYPE html>
<html>
<head>
  <title>Photogur</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= link_to "Home", root_url %> |


<% if current_user %>
  <%= link_to "Log Out", sessions_path, method: :delete %>
  <p>Signed in as <%= current_user.email %></p>
<% else %>
  <%= link_to "New User", new_users_path %> |
  <%= link_to "Log In", new_sessions_path %>
<% end %>

<% if flash[:alert] %>
  <% flash[:alert].each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
